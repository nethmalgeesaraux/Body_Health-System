<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.RegisterController">
    <children>
        <VBox alignment="CENTER" spacing="10.0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
            <Label text="Register New Account" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <TextField fx:id="txtUsername" promptText="Username" />
            <PasswordField fx:id="txtPassword" promptText="Password" />
            <TextField fx:id="txtWeight" promptText="Weight (kg)" />
            <TextField fx:id="txtHeight" promptText="Height (cm)" />

            <Label fx:id="lblMessage" textFill="red" />

            <HBox spacing="10">
                <Button text="Register" onAction="#registerUser" />
                <Button text="Back to Login" onAction="#backToLogin" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
